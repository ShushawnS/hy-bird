<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="333dp"
        android:layout_height="195dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/logo" />

    <!-- Easying the transition for work from home to office --><TextView
        android:id="@+id/easying_the"
        android:layout_width="286dp"
        android:layout_height="54dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:fontFamily="@font/poppins_medium"
        android:gravity="top"
        android:text="@string/easing_the"
        android:textAppearance="@style/easying_the"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.27"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.24000001" />

    <!-- Continue with Google -->

    <!-- SignIn Button -->
    <Button
        android:id="@+id/eLoginButton"
        android:layout_width="290dp"
        android:layout_height="69dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/eloginbutton"
        app:backgroundTint="@color/background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.638"
        android:strokeWidth="5"
        android:strokeColor="#FFFFFF" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="45dp"
        android:layout_height="180dp"
        android:elevation="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/eLoginButton"
        app:layout_constraintEnd_toEndOf="@+id/eLoginButton"
        app:layout_constraintStart_toEndOf="@+id/continue_wi"
        app:layout_constraintTop_toTopOf="@+id/eLoginButton"
        app:srcCompat="@drawable/google" />

    <!-- Continue with Google -->
    <TextView
        android:id="@+id/continue_wi"
        android:layout_width="174.8dp"
        android:layout_height="24.15dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:elevation="10dp"
        android:fontFamily="@font/poppins_medium"
        android:gravity="top"
        android:text="@string/continue_wi"
        android:textAppearance="@style/continue_wi"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/eLoginButton"
        app:layout_constraintEnd_toEndOf="@+id/eLoginButton"
        app:layout_constraintHorizontal_bias="0.2"
        app:layout_constraintStart_toStartOf="@+id/eLoginButton"
        app:layout_constraintTop_toTopOf="@+id/eLoginButton" />

    <!-- Donâ€™t have an account? Sign Up -->
    <TextView
        android:id="@+id/don_t_have_"
        android:layout_width="277dp"
        android:layout_height="65dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:fontFamily="@font/poppins_medium"
        android:gravity="top"
        android:text="@string/don_t_have_"
        android:textAppearance="@style/don_t_have_"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.74" />


</androidx.constraintlayout.widget.ConstraintLayout>